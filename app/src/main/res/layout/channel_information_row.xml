<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/viewholder_row_height">

    <ImageView
        android:id="@+id/iv_channel_preview"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:layout_widthPercent="40%" />

    <LinearLayout
        android:id="@+id/ll_channel_programs_holder"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_channel_preview"
        android:layout_toEndOf="@+id/iv_channel_preview"
        android:gravity="center_vertical|start"
        android:paddingLeft="@dimen/row_text_padding_left"
        android:paddingStart="@dimen/row_text_padding_left"
        app:layout_widthPercent="60%">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_channel_current_program"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_channel_next_program"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>